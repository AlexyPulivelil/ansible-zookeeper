[Unit]
Description=Zookeeper Daemon
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]    
Type=forking
WorkingDirectory=/opt/zookeeper/3.7.1
User=zookeeper
Group=zookeeper
ExecStart=/opt/zookeeper/3.7.1/bin/zkServer.sh start /opt/zookeeper/3.7.1/conf/zoo.cfg
ExecStop=/opt/zookeeper/3.7.1/bin/zkServer.sh stop /opt/zookeeper/3.7.1/conf/zoo.cfg
ExecReload=/opt/zookeeper/3.7.1/bin/zkServer.sh restart /opt/zookeeper/3.7.1/conf/zoo.cfg
TimeoutSec=30
Restart=on-failure

[Install]
WantedBy=default.target